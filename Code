    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const articleInput = document.getElementById('article-input');
            const summarizeBtn = document.getElementById('summarize-btn');
            const clearBtn = document.getElementById('clear-btn');
            const summaryPlaceholder = document.getElementById('summary-placeholder');
            const loadingIndicator = document.getElementById('loading-indicator');
            const summaryContent = document.getElementById('summary-content');
            const summaryText = document.getElementById('summary-text');
            const originalLengthSpan = document.getElementById('original-length');
            const summaryWordsSpan = document.getElementById('summary-words');
            const reductionSpan = document.getElementById('reduction');
            
            // Initialize the application
            function init() {
                // Set up event listeners
                summarizeBtn.addEventListener('click', handleSummarizeClick);
                clearBtn.addEventListener('click', handleClearClick);
            }
            
            // Handle summarize button click
            function handleSummarizeClick() {
                const articleText = articleInput.value.trim();
                
                if (articleText.length < 50) {
                    showAlert('Please enter an article to summarize.');
                    return;
                }
                
                showLoadingState();
                
                // Minimal delay for instant feel
                setTimeout(() => {
                    generateSummary(articleText);
                }, 300);
            }
            
            // Handle clear button click
            function handleClearClick() {
                articleInput.value = '';
                showPlaceholderState();
            }
            
            // Show loading state
            function showLoadingState() {
                summaryPlaceholder.style.display = 'none';
                loadingIndicator.style.display = 'flex';
                summaryContent.style.display = 'none';
                
                summarizeBtn.disabled = true;
                summarizeBtn.innerHTML = '<i class="fas fa-cog fa-spin"></i> Processing...';
            }
            
            // Show placeholder state
            function showPlaceholderState() {
                summaryPlaceholder.style.display = 'flex';
                loadingIndicator.style.display = 'none';
                summaryContent.style.display = 'none';
                summarizeBtn.disabled = false;
                summarizeBtn.innerHTML = '<i class="fas fa-robot"></i> Summarize Article';
            }
            
            // Show summary state
            function showSummaryState(summary, originalWordCount, summaryWordCount, reductionPercentage) {
                loadingIndicator.style.display = 'none';
                summaryContent.style.display = 'flex';
                
                summarizeBtn.disabled = false;
                summarizeBtn.innerHTML = '<i class="fas fa-robot"></i> Summarize Article';
                
                summaryText.textContent = summary;
                originalLengthSpan.textContent = `Original: ${originalWordCount} words`;
                summaryWordsSpan.textContent = `Summary: ${summaryWordCount} words`;
                reductionSpan.textContent = `Reduction: ${reductionPercentage}%`;
            }
            
            // Generate summary (instant processing)
            function generateSummary(articleText) {
                const summary = createSummary(articleText);
                const originalWordCount = countWords(articleText);
                const summaryWordCount = countWords(summary);
                const reductionPercentage = Math.round(((originalWordCount - summaryWordCount) / originalWordCount) * 100);
                
                showSummaryState(summary, originalWordCount, summaryWordCount, reductionPercentage);
            }
            
            // Create a summary (instant algorithm)
            function createSummary(articleText) {
                const wordCount = countWords(articleText);
                
                // Simple extraction of first few sentences for instant results
                const sentences = articleText.split(/[.!?]+/).filter(s => s.trim().length > 0);
                const keySentences = sentences.slice(0, Math.min(3, sentences.length));
                
                let summary = "AI Summary:\n\n";
                
                if (keySentences.length > 0) {
                    summary += keySentences.map(s => `‚Ä¢ ${s.trim()}`).join('\n');
                } else {
                    // Fallback for very short texts
                    const words = articleText.split(/\s+/);
                    const keyWords = words.slice(0, Math.min(30, words.length));
                    summary += `‚Ä¢ ${keyWords.join(' ')}...`;
                }
                
                return summary;
            }
            
            // Helper function to count words
            function countWords(text) {
                if (!text.trim()) return 0;
                return text.trim().split(/\s+/).length;
            }
            
            // Show alert message
            function showAlert(message) {
                alert(message);
            }
            
            // Initialize the application
            init();
        });
    </script>
</body>
